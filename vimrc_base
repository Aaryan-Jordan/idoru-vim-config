set ts=2
set bs=2
set shiftwidth=2
set smarttab
set expandtab

"If you like to see all characters
"set list

"Key mappings
"map <D-t> :NERDTreeToggle<CR>
map <D-e> :FufBuffer<CR>
map <D-N> :FufFile<CR>
map <D-D> :NERDTreeToggle<CR>

let g:speckyRunSpecKey = "<C-S>r"

autocmd BufWrite * call SetStatusLine()
autocmd BufRead * call SetStatusLine()

"Nice status
function! SetStatusLine()
	set statusline=[%n]\ %F%m%r%h%w\ [TYPE=%Y\ %{&ff}]\ %=\t%{ShowTab()}\ [%l/%L\ (%p%%)]
"set statusline=[%n]\ %f\ %(\ \ (%M%R%H)%)\ \ \ %=\t%{ShowTab()}\ \ \ Modified:\ %{Time()}\ \ [%3l:%3L,%2c]\ %p%%\
endfunction

function! Time()
  return strftime("%c", getftime(bufname("%")))
endfunction

function! ShowTab()
  let TabLevel = (indent('.') / &ts )
  if TabLevel == 0
    let TabLevel='*'
  endif
  return TabLevel
endfunction

"show matching brackets
set showmatch

"always show statusline
set laststatus=2

